{
  "name": "@upvotr/node-hmr",
  "version": "1.0.0",
  "description": "Hot module reloading for node.js with persistient values",
  "main": "./build/commonjs/index.js",
  "exports": {
    "require": "./build/commonjs/index.js",
    "import": "./build/esm/index.js"
  },
  "scripts": {
    "test": "jest",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "concurrently \"npm:build:cjs\" \"npm:build:esm\""
  },
  "repository": "https://github.com/UpVotr/node-hmr.git",
  "author": "ErrorGamer2000 <errorgamer2000@outlook.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@jest/globals": "^29.4.3",
    "concurrently": "^7.6.0",
    "jest": "^29.4.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@types/node": "^18.14.0"
  }
}
